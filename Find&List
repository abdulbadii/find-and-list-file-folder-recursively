#! /usr/bin/bash
ll(){
o=%p;i=
for a
{
let i++
case ${a:0:3} in
	-s) o='%s %p';;
	-t) o='%p %Tr %Tx';;
	-st|-ts) o="%s %p %Tr %Tx";;
	*)
	if [ ! -e $a ];then
		a=${a//./\\.};a=${a//\*/.*}
		find ~+ -regextype posix-extended -iregex "^.*/${a//\?/.}.*" -printf "$o \n"
	else
		a=${@:$i}
		if [ "${a:0:1}" = / ];then
			b=${@:i:1};	c=${@:${#@}};
			p=
			for((j=1;;j++))
			{	[ ${b:j:1} != ${c:j:1} ]&&break;}
			p=${b:0:j};	a="(${a// /|})"
		else p=~+;	a="^.*/(${a// /|})"
		fi
		find $p -regextype posix-extended -iregex "$a" -printf "$o \n"
	fi
	return;;
esac
}
}
