#! /usr/bin/bash
ll(){
p=~+;i=;o=
for a
{
let i++
case ${a:0:3} in
	-s) o="%s %p";;
	-t) o="%p %t";;
	-st|-ts) o="%s %p %t";;
	*)
	if test "${a:0:1}" = / ;then
		if test -d $a ;then
			find $a -noleaf -regextype posix-extended -iregex '.*' -printf "${o:-%p} \n"
		elif test -f $a ;then
			p=${a%/*}
			a=${@:$i};	a=${a//$p/}
			find $p -noleaf -regextype posix-extended -iregex "^.*(${a// /|})" -printf "${o:-%p} \n"
		else echo No file or directory exists
		fi
	elif test -f $a ;then 
		a=${@:$i}
		find ~+ -noleaf -regextype posix-extended -iregex "^.*/(${a// /|})" -printf "${o:-%p} \n"
	else
		a=${a//./\\.};a=${a//\*/.*}
		find ~+ -noleaf -regextype posix-extended -iregex "^.*/${a//\?/.}" -printf "${o:-%p} \n"
	fi
	return;;
esac
}
}