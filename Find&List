#! /usr/bin/bash
l(){
i=;o=%p
for a
{
let i++
case ${a:0:3} in
	-s) o="%s %p";;
	-t) o="%p %t";;
	-st|-ts) o="%s %p %t";;
	*)
	if test "${a:0:1}" = / ;then
		if test -d $a ;then
			find $a -regextype posix-extended -iregex '.*' -printf "$o \n"
		elif test -f $a ;then
			p=${a%/*}
			a=${@:$i};	a=${a//$p/}
			find $p -regextype posix-extended -iregex "^.*(${a// /|})" -printf "$o \n"
		else echo No \'$a\' file/directory exists
		fi
	elif test -f $a ;then 
		a=${@:$i}
		find ~+ -regextype posix-extended -iregex "^.*/(${a// /|})" -printf "$o \n"
	else
		a=${a//./\\.};a=${a//\*/.*}
		find ~+ -regextype posix-extended -iregex "^.*/${a//\?/.}" -printf "$o \n"
	fi
	return;;
esac
}
}
